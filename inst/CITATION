citHeader("To cite ascrda in publications use:")

citEntry(entry = "Article",
  title        = "Augmented Shrunken Centroid Regularized Discriminant Analysis",
  author       = personList(as.person("M. S. Islam"),
                   as.person("A. I. McLeod")),
  journal      = "Submitted for publication",
  year         = "2011",

  textVersion  =
  paste("M. S. Islam, A. I. McLeod (2011).",
        "Augmented Shrunken Centroid Regularized Discriminant Analysis",
        "Submitted")
)

